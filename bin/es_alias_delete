#!/usr/bin/env ruby

require "datura"

require "json"
require "rest-client"

params = Datura::Parser.es_alias_add
options = Datura::Options.new(params).all
url = File.join(options["es_path"], options["index"], "_alias", options["alias"])

res = JSON.parse(RestClient.delete(url))
puts JSON.pretty_generate(res)
